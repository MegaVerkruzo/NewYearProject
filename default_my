server {
        listen 80;
        server_name www.blago2023.ru blago2023.ru;
        return 301 https://blago2023.ru$request_uri;
}

server {
        listen 80;
        server_name http://blago2023.ru;
        return 301 https://blago2023.ru$request_uri;
}

